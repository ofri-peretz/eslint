{
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
    },
    "yaml.format.enable": true,
    "yaml.validate": true,
    "yaml.hover": true,
    "yaml.completion": true,
    "github-actions.workflows.pinned.workflows": [
        ".github/workflows/ci.yml",
        ".github/workflows/release.yml"
    ],
    // ============================================
    // File Watcher Exclusions (reduces FSEvents load)
    // ============================================
    "files.watcherExclude": {
        // Package Managers
        "**/node_modules/**": true,
        "**/.pnpm-store/**": true,
        // Build Outputs
        "**/dist/**": true,
        "**/build/**": true,
        "**/out/**": true,
        "**/.next/**": true,
        "**/standalone/**": true,
        "**/_next/**": true,
        // Framework Caches
        "**/.nx/**": true,
        "**/.cache/**": true,
        "**/.parcel-cache/**": true,
        "**/.contentlayer/**": true,
        "**/.source/**": true,
        "**/.turbo/**": true,
        "**/.vercel/**": true,
        // Test Artifacts
        "**/coverage/**": true,
        "**/test-results/**": true,
        "**/.nyc_output/**": true,
        "**/.jest/**": true,
        // Temporary Files
        "**/tmp/**": true,
        // Version Control
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        // Large Generated Files
        "**/graph.json": true,
        "**/*.tsbuildinfo": true,
        "**/*.log": true,
        "**/*.map": true
    },
    // ============================================
    // Search Exclusions (faster find-in-files)
    // ============================================
    "search.exclude": {
        // Package Managers
        "**/node_modules": true,
        "packages/**/pnpm-lock.yaml": true,
        "apps/**/pnpm-lock.yaml": true,
        // Build Outputs
        "**/dist": true,
        "**/build": true,
        "**/out": true,
        "**/.next": true,
        "**/standalone": true,
        // Framework Caches
        "**/.nx": true,
        "**/.cache": true,
        "**/.parcel-cache": true,
        "**/.contentlayer": true,
        "**/.source": true,
        "**/.turbo": true,
        "**/.vercel": true,
        // Test Artifacts
        "**/coverage": true,
        "**/test-results": true,
        // Temporary Files
        "**/tmp": true,
        // Large Generated Files
        "**/graph.json": true,
        "**/*.tsbuildinfo": true,
        "**/*.map": true
    },
    // ============================================
    // File Explorer Exclusions (cleaner sidebar)
    // ============================================
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.tsbuildinfo": true,
        "**/graph.json": true
    }
}