{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "module": "Node16",
    "moduleResolution": "Node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@interlace/eslint-devkit": ["packages/eslint-devkit/src/index.ts"],
      "eslint-plugin-mcp": ["packages/eslint-plugin-mcp/src/index.ts"],
      "eslint-plugin-mcp-optimized": [
        "packages/eslint-plugin-mcp-optimized/src/index.ts"
      ],
      "eslint-plugin-code-mode": [
        "packages/eslint-plugin-code-mode/src/index.ts"
      ],
      "eslint-plugin-generalist": [
        "packages/eslint-plugin-generalist/src/index.ts"
      ],
      "eslint-plugin-secure-coding": [
        "packages/eslint-plugin-secure-coding/src/index.ts"
      ],
      "eslint-plugin-react-a11y": [
        "packages/eslint-plugin-react-a11y/src/index.ts"
      ],
      "eslint-plugin-dependencies": [
        "packages/eslint-plugin-dependencies/src/index.ts"
      ],
      "eslint-plugin-agentic-security": [
        "packages/eslint-plugin-agentic-security/src/index.ts"
      ],
      "eslint-plugin-openai-security": [
        "packages/eslint-plugin-openai-security/src/index.ts"
      ],
      "eslint-plugin-anthropic-security": [
        "packages/eslint-plugin-anthropic-security/src/index.ts"
      ],
      "eslint-plugin-google-ai-security": [
        "packages/eslint-plugin-google-ai-security/src/index.ts"
      ],
      "eslint-plugin-pg": ["packages/eslint-plugin-pg/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
