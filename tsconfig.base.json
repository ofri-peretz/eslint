{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "module": "Node16",
    "moduleResolution": "Node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@interlace/eslint-devkit": ["packages/eslint-devkit/src/index.ts"],
      "eslint-plugin-secure-coding": [
        "packages/eslint-plugin-secure-coding/src/index.ts"
      ],
      "eslint-plugin-react-a11y": [
        "packages/eslint-plugin-react-a11y/src/index.ts"
      ],
      "eslint-plugin-import-next": [
        "packages/eslint-plugin-import-next/src/index.ts"
      ],
      "eslint-plugin-pg": ["packages/eslint-plugin-pg/src/index.ts"],
      "eslint-plugin-crypto": ["packages/eslint-plugin-crypto/src/index.ts"],
      "eslint-plugin-jwt": ["packages/eslint-plugin-jwt/src/index.ts"],
      "eslint-plugin-express-security": [
        "packages/eslint-plugin-express-security/src/index.ts"
      ],
      "eslint-plugin-nestjs-security": [
        "packages/eslint-plugin-nestjs-security/src/index.ts"
      ],
      "eslint-plugin-lambda-security": [
        "packages/eslint-plugin-lambda-security/src/index.ts"
      ],
      "eslint-plugin-browser-security": [
        "packages/eslint-plugin-browser-security/src/index.ts"
      ],
      "@interlace/cwe-analytics-engine": [
        "tools/cwe-analytics-engine/src/index.ts"
      ],
      "eslint-plugin-node-security": [
        "packages/eslint-plugin-node-security/src/index.ts"
      ],
      "eslint-plugin-maintainability": [
        "packages/eslint-plugin-maintainability/src/index.ts"
      ],
      "eslint-plugin-reliability": [
        "packages/eslint-plugin-reliability/src/index.ts"
      ],
      "eslint-plugin-operability": [
        "packages/eslint-plugin-operability/src/index.ts"
      ],
      "eslint-plugin-conventions": [
        "packages/eslint-plugin-conventions/src/index.ts"
      ],
      "@interlace/eslint-plugin-modularity": [
        "packages/eslint-plugin-modularity/src/index.ts"
      ],
      "@interlace/eslint-plugin-modernization": [
        "packages/eslint-plugin-modernization/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
