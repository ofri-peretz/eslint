{
  "name": "docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "node scripts/sync-plugin-stats.mjs && node scripts/sync-tweet-cache.mjs && next build",
    "dev": "node scripts/sync-plugin-stats.mjs && next dev --port 3000",
    "sync-stats": "node scripts/sync-plugin-stats.mjs",
    "sync-tweets": "node scripts/sync-tweet-cache.mjs",
    "sync-devto": "node scripts/sync-devto-cache.mjs",
    "start": "next start",
    "types:check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:css": "vitest run src/__tests__/tailwind-classes.test.ts"
  },
  "dependencies": {
    "@fumadocs/mdx-remote": "^1.4.5",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.2.0",
    "clsx": "^2.1.1",
    "fumadocs-core": "^16.6.5",
    "fumadocs-mdx": "^14.2.8",
    "fumadocs-ui": "^16.6.5",
    "mermaid": "^11.12.3",
    "motion": "^12.29.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-tweet": "^3.3.0",
    "tailwind-merge": "^3.4.0",
    "next": "^16.1.6",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/mdx": "^2.0.13",
    "@types/node": "^25.3.0",
    "vitest": "^2.1.0"
  }
}