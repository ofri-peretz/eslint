{
  "name": "docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "node scripts/sync-plugin-stats.mjs && next build",
    "dev": "node scripts/sync-plugin-stats.mjs && next dev",
    "sync-stats": "node scripts/sync-plugin-stats.mjs",
    "start": "next start",
    "types:check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:css": "vitest run src/__tests__/tailwind-classes.test.ts"
  },
  "dependencies": {
    "@fumadocs/mdx-remote": "^1.4.4",
    "@tailwindcss/postcss": "*",
    "clsx": "^2.1.1",
    "fumadocs-core": "*",
    "fumadocs-mdx": "*",
    "fumadocs-ui": "*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "*"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/mdx": "^2.0.13",
    "vitest": "^2.1.0"
  }
}
