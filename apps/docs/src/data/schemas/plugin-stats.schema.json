{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://eslint.interlace.tools/schemas/plugin-stats.json",
    "title": "PluginStatsData",
    "description": "Statistics for all ESLint plugins in the Interlace ecosystem. Generated by GitHub Actions workflow update-docs-stats.yml",
    "type": "object",
    "required": [
        "plugins",
        "totalRules",
        "totalPlugins",
        "allPluginsCount",
        "generatedAt"
    ],
    "properties": {
        "plugins": {
            "type": "array",
            "description": "List of all plugins with their metadata, sorted by rule count descending",
            "items": {
                "$ref": "#/definitions/PluginStat"
            }
        },
        "totalRules": {
            "type": "integer",
            "minimum": 0,
            "description": "Sum of all rules across all plugins"
        },
        "totalPlugins": {
            "type": "integer",
            "minimum": 0,
            "description": "Count of published plugins only (published: true)"
        },
        "allPluginsCount": {
            "type": "integer",
            "minimum": 0,
            "description": "Count of all plugins including unpublished ones"
        },
        "generatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when data was generated"
        }
    },
    "definitions": {
        "PluginStat": {
            "type": "object",
            "required": [
                "name",
                "rules",
                "description",
                "category",
                "version",
                "published"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "pattern": "^eslint-plugin-[a-z0-9-]+$",
                    "description": "Full npm package name (e.g., eslint-plugin-browser-security)"
                },
                "rules": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Number of rules exported by the plugin"
                },
                "description": {
                    "type": "string",
                    "description": "Plugin description from package.json"
                },
                "category": {
                    "type": "string",
                    "enum": [
                        "security",
                        "quality",
                        "framework",
                        "architecture",
                        "react"
                    ],
                    "description": "Plugin category for UI grouping"
                },
                "version": {
                    "type": "string",
                    "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$",
                    "description": "Current version (semver format)"
                },
                "published": {
                    "type": "boolean",
                    "description": "Whether the plugin is published to npm (not private: true)"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}