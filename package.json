{
  "name": "eslint",
  "version": "1.0.0",
  "description": "Open-source tools and libraries for JavaScript & TypeScript ecosystems - ESLint plugins with LLM-optimized rules, utilities, and CLI tools in an Nx monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "main": "index.js",
  "homepage": "https://github.com/ofri-peretz/eslint#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ofri-peretz/eslint.git"
  },
  "bugs": {
    "url": "https://github.com/ofri-peretz/eslint/issues"
  },
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "prepare": "husky",
    "lint:workflows": "actionlint",
    "release": "nx release",
    "release:dry-run": "nx release --dry-run",
    "release:first": "nx release --first-release",
    "release:publish": "nx release publish",
    "release:version": "nx release --skip-publish",
    "publish:plugin": "nx run eslint-plugin:publish",
    "publish:devkit": "nx run eslint-devkit:publish",
    "publish:secure-coding": "nx run eslint-plugin-secure-coding:publish",
    "publish:cli": "nx run cli:publish",
    "publish:all": "pnpm nx run-many -t build --all && nx release publish",
    "ci:trigger": "gh workflow run ci.yml --ref local-playground-app && echo 'âœ… Workflow triggered!'",
    "ci:status": "tsx scripts/ci-status.ts",
    "ci": "tsx scripts/ci-status.ts",
    "delete-branches": "nx delete-branches",
    "sync-tags": "tsx scripts/sync-git-tags.ts",
    "sync-tags:dry-run": "tsx scripts/sync-git-tags.ts --dry-run",
    "check-links": "tsx scripts/check-markdown-links.ts",
    "check-versions": "tsx scripts/check-version-alignment.ts",
    "check-source-versions": "tsx scripts/check-source-version-sync.ts",
    "sync-source-versions": "tsx scripts/sync-source-versions.ts",
    "setup-branch-protection": "bash scripts/setup-branch-protection.sh",
    "benchmark": "tsx scripts/benchmark-plugin.ts",
    "benchmark:json": "tsx scripts/benchmark-plugin.ts --json",
    "devto:publish": "tsx scripts/devto-publish.ts",
    "devto:update-tags": "tsx scripts/devto-update-tags.ts"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "typescript",
    "linting",
    "llm-optimized",
    "ai-assistant",
    "code-quality",
    "static-analysis",
    "ast",
    "nx",
    "monorepo",
    "cli",
    "utilities",
    "security",
    "accessibility",
    "react",
    "performance",
    "mcp",
    "model-context-protocol",
    "github-copilot",
    "cursor-ai",
    "claude-ai",
    "auto-fix",
    "deterministic-fixes",
    "cwe",
    "vulnerability-detection"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
