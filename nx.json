{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/.env*",
      "{workspaceRoot}/.npmrc",
      "{workspaceRoot}/.yarnrc",
      "{workspaceRoot}/.pnpmfile.cjs"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "test"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/.tsbuildinfo"],
      "cache": true,
      "configurations": {
        "production": {}
      }
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js",
        "{workspaceRoot}/eslint.config.mjs"
      ],
      "outputs": ["{projectRoot}/.eslintcache"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production"],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/test-report.junit.xml"
      ],
      "cache": true
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/.tsbuildinfo"]
    },
    "typecheck": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/tsconfig.base.json"]
    },
    "@nx/vite:test": {
      "cache": true,
      "inputs": ["default", "^production"],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/test-report.junit.xml"
      ]
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "exclude": ["**/benchmark/**"],
      "options": {
        "targetName": "lint",
        "eslintArgs": "--max-warnings=0"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "exclude": ["**/benchmark/**"],
      "options": {
        "buildTargetName": "build",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "devTargetName": "dev",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    }
  ],
  "release": {
    "projects": [
      "eslint-devkit",
      "eslint-plugin-secure-coding",
      "eslint-plugin-vercel-ai-security",
      "eslint-plugin-pg",
      "eslint-plugin-crypto",
      "eslint-plugin-jwt",
      "eslint-plugin-express-security",
      "eslint-plugin-nestjs-security",
      "eslint-plugin-import-next",
      "eslint-plugin-browser-security",
      "eslint-plugin-lambda-security",
      "eslint-plugin-mongodb-security"
    ],
    "projectsRelationship": "independent",
    "conventionalCommits": {
      "types": {
        "feat": {
          "semverBump": "minor",
          "changelog": {
            "title": "Features"
          }
        },
        "fix": {
          "semverBump": "patch",
          "changelog": {
            "title": "Bug Fixes"
          }
        },
        "perf": {
          "semverBump": "patch",
          "changelog": {
            "title": "Performance"
          }
        },
        "docs": {
          "semverBump": "patch",
          "changelog": {
            "title": "Documentation"
          }
        },
        "refactor": {
          "semverBump": "patch",
          "changelog": {
            "title": "Refactoring"
          }
        },
        "style": {
          "semverBump": "patch",
          "changelog": false
        },
        "test": {
          "semverBump": "patch",
          "changelog": false
        },
        "build": {
          "semverBump": "patch",
          "changelog": false
        },
        "ci": {
          "semverBump": "patch",
          "changelog": false
        },
        "chore": {
          "semverBump": "patch",
          "changelog": false
        }
      }
    },
    "version": {
      "preVersionCommand": "pnpm nx run-many -t build --projects={projects}",
      "updateDependents": "always",
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk",
      "specifierSource": "conventional-commits",
      "versionActionsOptions": {
        "skipLockFileUpdate": true
      },
      "manifestRootsToUpdate": ["{projectRoot}"],
      "git": {
        "commit": true,
        "commitArgs": "--no-verify",
        "commitMessage": "chore(release): {projectName}@{version}",
        "tag": true,
        "tagMessage": "chore(release): {projectName}@{version}"
      }
    },
    "changelog": {
      "workspaceChangelog": {
        "createRelease": "github",
        "file": "CHANGELOG.md"
      },
      "projectChangelogs": true,
      "git": {
        "commit": true,
        "commitArgs": "--no-verify",
        "commitMessage": "chore(release): {projectName}@{version} changelog",
        "tag": false
      }
    },
    "releaseTagPattern": "{projectName}@{version}"
  },
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true,
        "style": "css",
        "linter": "none",
        "bundler": "vite"
      },
      "component": {
        "style": "css"
      },
      "library": {
        "style": "css",
        "linter": "none"
      }
    }
  }
}
