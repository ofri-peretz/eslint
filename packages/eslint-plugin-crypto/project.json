{
  "name": "eslint-plugin-crypto",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/eslint-plugin-crypto/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/eslint-plugin-crypto",
        "main": "packages/eslint-plugin-crypto/src/index.ts",
        "tsConfig": "packages/eslint-plugin-crypto/tsconfig.lib.json",
        "assets": [
          "packages/eslint-plugin-crypto/*.md",
          "packages/eslint-plugin-crypto/.npmignore"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{projectRoot}/coverage"
      ],
      "options": {
        "configFile": "packages/eslint-plugin-crypto/vitest.config.mts"
      },
      "configurations": {
        "ci": {
          "coverage": true
        }
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}