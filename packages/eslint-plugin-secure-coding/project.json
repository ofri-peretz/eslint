{
  "name": "eslint-plugin-secure-coding",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/eslint-plugin-secure-coding/src",
  "projectType": "library",
  "tags": [
    "npm:public",
    "npm:eslint",
    "npm:eslint-plugin",
    "npm:typescript",
    "npm:linting",
    "npm:security",
    "npm:secure-coding",
    "npm:owasp",
    "npm:cwe",
    "npm:llm-optimized",
    "npm:code-quality",
    "npm:ast",
    "npm:static-analysis"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": [
        "^build",
        "test"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/eslint-plugin-secure-coding",
        "main": "packages/eslint-plugin-secure-coding/src/index.ts",
        "tsConfig": "packages/eslint-plugin-secure-coding/tsconfig.lib.json",
        "assets": [
          "packages/eslint-plugin-secure-coding/README.md",
          "packages/eslint-plugin-secure-coding/CHANGELOG.md",
          "packages/eslint-plugin-secure-coding/LICENSE",
          "packages/eslint-plugin-secure-coding/AGENTS.md",
          "packages/eslint-plugin-secure-coding/.npmignore",
          "packages/eslint-plugin-secure-coding/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{projectRoot}/coverage"
      ],
      "options": {
        "configFile": "packages/eslint-plugin-secure-coding/vitest.config.mts"
      },
      "configurations": {
        "ci": {
          "coverage": true
        }
      }
    },
    "build:minimal": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build"
      ],
      "options": {
        "commands": [
          "find dist/packages/eslint-plugin-secure-coding -name '*.js.map' -delete"
        ],
        "cwd": "{workspaceRoot}"
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
